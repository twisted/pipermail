# demo1

from twisted.web import domtemplate

class Demo(domtemplate.DOMTemplate):
    templateFile = "demo1.html"

    def factory_hello(self, request, node):
        # Return a simple string
        return "Hello, world! <h3>hi</h3>"
    
    def factory_hello2(self, request, node):
        # Return a node instance
        return self.d.createTextNode("Hello, world! <h3>hi</h3><")
    
    def factory_hello3(self, request, node):
        # Mutate the node that was in the template
        node.appendChild(self.d.createTextNode("Hello, world!"))
        return node

    def factory_hello4(self, request, node):
        # Clear the template content before mutating the node
        from twisted.python import domhelpers
        
        domhelpers.clearNode(node)
        node.appendChild(self.d.createTextNode("Hello, world!"))
        return node
