# Twisted demo schema

attributeType ( 1.1 NAME 'identity'
                DESC 'User identity'
                EQUALITY caseIgnoreMatch
                SYNTAX 1.3.6.1.4.1.1466.115.121.1.44
                SINGLE-VALUE )

attributeType ( 1.2 NAME 'perspective'
                DESC 'Service perspective'
                EQUALITY caseIgnoreMatch
                SYNTAX 1.3.6.1.4.1.1466.115.121.1.44 )

attributeType ( 1.3 NAME 'service'
                DESC 'Service name'
                EQUALITY caseIgnoreMatch
                SYNTAX 1.3.6.1.4.1.1466.115.121.1.44
                SINGLE-VALUE )

attributeType ( 1.4 NAME 'password'
                DESC 'User password'
                EQUALITY caseIgnoreMatch
                SYNTAX 1.3.6.1.4.1.1466.115.121.1.44
                SINGLE-VALUE )


objectClass ( 1.3 NAME 'TwistedUser'
              DESC 'User of Twisted services'
              MUST ( identity $ password ) )

objectClass ( 1.4 NAME 'Perspectives'
              DESC 'User perspective for a given service'
              MUST ( perspective $ service ) )
