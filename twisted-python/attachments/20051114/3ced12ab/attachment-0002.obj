# As for setUpClass:
class ClassTest(unittest.TestCase):
  def setUpClass(self):
    self.db = self.expensiveDBGetter()

  def expensiveDBGetter(self):
      return 'database'

  def test_1(self):
    del self.db

  def test_2(self):
    self.failIf(hasattr(self, 'db'))
