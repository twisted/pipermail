+    def _runQueryMapped(self, *args, **kw):
+        conn = self.connect()
+        curs = conn.cursor()
+        try:
+            curs.execute(*args, **kw)
+            result = curs.fetchall()
+            columns = [d[0] for d in curs.description]
+            curs.close()
+            conn.commit()
+            return [dict(zip(columns, r)) for r in result]
