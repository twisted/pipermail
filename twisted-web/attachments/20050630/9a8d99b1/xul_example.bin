<?xml version="1.0"?>
<?xml-stylesheet href="chrome://global/skin/" type="text/css"?>

<window
    id="xul-window"
    title="My Example"
    orient="horizontal"
    xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
    xmlns:n="http://nevow.com/ns/nevow/0.1">
    
<script>
function changeLabel(arg)
{
  document.getElementById("label-dyn").setAttribute("value", arg);
}

function getValue(nodeName) {
  return window.document.getElementById(nodeName).value;
}

function changeRecord(arg1, arg2, arg3, arg4) {
  document.getElementById("name").setAttribute("value",arg1);
  document.getElementById("surname").setAttribute("value",arg2);
  document.getElementById("address").setAttribute("value",arg3);
  document.getElementById("city").setAttribute("value",arg4);
}
</script>

 <vbox flex="1">
	<description>
		Type in some text and I'll do something for you
	</description>

   <hbox>	 
 	  <label value="Type Value here:" control="some-text" />
 	  <textbox id="some-text"/>
 	  <label id="label-dyn" value="" />
   </hbox>

   <hbox>
   	<button id="add-button" label="Change Record" default="true" n:render="btn" />
   </hbox>

   <hbox>

<groupbox>
  <grid>
    <columns>
      <column/>
      <column/>
    </columns>
  
    <rows>
      <row>
        <label flex="1" value="Name:"/>
        <textbox id="name" size="20" value="" maxlength="20" />
      </row>
      <row>
        <label value="Surname:"/>
        <textbox id="surname" size="20" maxlength="20"/>
      </row>
      <row>
        <label value="Address:"/>
        <textbox id="address" size="40" maxlength="40"/>
      </row>
      <row>
        <label value="City:"/>
        <textbox id="city" size="20" maxlength="20"/>
      </row>
  
    </rows>
  </grid>
  
</groupbox>

   </hbox>

 </vbox>

 <n:invisible n:render="liveid" />
 <n:invisible n:render="liveglue" />
</window>